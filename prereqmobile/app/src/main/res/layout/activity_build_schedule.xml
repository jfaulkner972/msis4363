<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jfaulkner.prereqmobile.BuildSchedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Please select the classes you want to take:"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/course1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 1"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 2"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 3"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 4"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 5"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 6"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 7"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 8"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 9"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 10"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/course11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Course 11"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:onClick="displayScheduleGo"
            android:text="Check Schedule"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>