<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jfaulkner.prereqmobile.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:srcCompat="@drawable/shadow_pete" />

        <Button
            android:id="@+id/degreeProgress"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#000000"
            android:onClick="degreeOptionGo"
            android:text="Degree Progress"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <Button
            android:id="@+id/checkCourse"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#000000"
            android:onClick="checkCourseGo"
            android:text="Check a Course"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nextSemester"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="#000000"
            android:onClick="nextSemesterGo"
            android:text="Next Semester"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>