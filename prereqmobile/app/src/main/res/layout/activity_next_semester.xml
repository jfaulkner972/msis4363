<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jfaulkner.prereqmobile.NextSemester">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            app:srcCompat="@drawable/shadow_pete" />

        <Button
            android:id="@+id/newSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:onClick="buildScheduleGo"
            android:text="New Schedule"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <Button
            android:id="@+id/schedule1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:onClick="displayScheduleGo1"
            android:text="Schedule 1"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <Button
            android:id="@+id/schedule2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:onClick="displayScheduleGo2"
            android:text="Schedule 2"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <Button
            android:id="@+id/schedule3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:onClick="displayScheduleGo3"
            android:text="Schedule 3"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

        <Button
            android:id="@+id/schedule4"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#000"
            android:onClick="displayScheduleGo4"
            android:text="Schedule 4"
            android:textColor="#FF8C00"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>